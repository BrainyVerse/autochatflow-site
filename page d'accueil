  <script>
    // Dictionnaire FR/EN
    const I18N = {
      fr: {
        brand: "AutoChatFlow AI",
        "nav-services": "Services",
        "nav-method": "Méthode",
        "nav-contact": "Contact",
        "hero-title": "Automatisez WhatsApp & vos processus avec n8n",
        "hero-lead": "À Mulhouse, nous aidons dirigeants, PME et e‑commerçants à gagner du temps, réduire les coûts et booster la productivité grâce à des automatisations sur mesure.",
        "hero-cta": "Demander un audit gratuit",
        "highlights-title": "Ce que vous obtenez",
        "hi-1": "Réponses plus rapides et messages cohérents",
        "hi-2": "Workflows traçables et conformes RGPD",
        "hi-3": "Intégration à vos outils (CRM, e‑commerce, email)",
        "services-title": "Services",
        "s-1": "Connexion officielle WhatsApp Business API (Cloud API)",
        "s-2": "Création de workflows n8n robustes (CRM, e‑commerce, facturation)",
        "s-3": "Agents IA pour pré‑qualification et routage",
        "s-4": "Déploiement sécurisé, monitoring et support",
        "method-title": "Notre méthode",
        "m-1": "Audit express (30 min) pour identifier les quick wins",
        "m-2": "Prototype fonctionnel en conditions réelles",
        "m-3": "Déploiement sécurisé, tests de bout en bout",
        "m-4": "Optimisation continue (KPI, coûts, SLA)",
        "contact-title": "Contact",
        "contact-text": "Email : contact@autochatflow.dpdns.org — Mulhouse, France",
        "footer-text": "© 2025 AutoChatFlow AI — Tous droits réservés."
      },
      en: {
        brand: "AutoChatFlow AI",
        "nav-services": "Services",
        "nav-method": "Method",
        "nav-contact": "Contact",
        "hero-title": "Automate WhatsApp and your processes with n8n",
        "hero-lead": "In Mulhouse, we help business owners, SMBs, and e‑commerce save time, cut costs, and boost productivity with tailored automations.",
        "hero-cta": "Request a free audit",
        "highlights-title": "What you get",
        "hi-1": "Faster replies and consistent messaging",
        "hi-2": "Traceable workflows, GDPR‑compliant",
        "hi-3": "Integrations with your tools (CRM, e‑commerce, email)",
        "services-title": "Services",
        "s-1": "Official WhatsApp Business API connection (Cloud API)",
        "s-2": "Robust n8n workflows (CRM, e‑commerce, invoicing)",
        "s-3": "AI agents for pre‑qualification and routing",
        "s-4": "Secure deployment, monitoring, and support",
        "method-title": "Our method",
        "m-1": "Express audit (30 min) to identify quick wins",
        "m-2": "Working prototype in real conditions",
        "m-3": "Secure deployment with end‑to‑end tests",
        "m-4": "Continuous optimization (KPIs, costs, SLAs)",
        "contact-title": "Contact",
        "contact-text": "Email: contact@autochatflow.dpdns.org — Mulhouse, France",
        "footer-text": "© 2025 AutoChatFlow AI — All rights reserved."
      }
    };

    const $ = (id) => document.getElementById(id);
    const mapIds = [
      "brand","nav-services","nav-method","nav-contact",
      "hero-title","hero-lead","hero-cta",
      "highlights-title","hi-1","hi-2","hi-3",
      "services-title","s-1","s-2","s-3","s-4",
      "method-title","m-1","m-2","m-3","m-4",
      "contact-title","contact-text","footer-text"
    ];

    function applyLang(lang){
      const dict = I18N[lang] || I18N.fr;
      mapIds.forEach(id => { if($(id)) $(id).textContent = dict[id]; });
      // CTA is a button-like link; restore href after text update
      const cta = $("hero-cta");
      if(cta) cta.setAttribute("href","mailto:contact@autochatflow.dpdns.org");
      document.documentElement.lang = lang;

      // UI state for buttons
      document.querySelectorAll(".lang-btn").forEach(b=>{
        b.setAttribute("aria-current", b.dataset.lang===lang ? "true" : "false");
      });

      // Update URL param without reload
      const u = new URL(location.href);
      u.searchParams.set("lang", lang);
      history.replaceState({}, "", u);
    }

    // Init: take ?lang=en|fr or browser
    (function init(){
      const q = new URLSearchParams(location.search).get("lang");
      const guess = q ? q : ((navigator.language||"fr").slice(0,2)==="en" ? "en" : "fr");
      applyLang(guess);
    })();

    // Events
    document.querySelectorAll(".lang-btn").forEach(btn=>{
      btn.addEventListener("click", ()=> applyLang(btn.dataset.lang));
    });
  </script>
