    <script>
        let currentLang = 'fr';

        function switchLanguage(lang) {
            currentLang = lang;
            document.querySelectorAll('.fr-text, .en-text').forEach(el => {
                el.classList.add('hidden-lang');
            });
            document.querySelectorAll(`.${lang}-text`).forEach(el => {
                el.classList.remove('hidden-lang');
            });
            document.getElementById('fr-btn').classList.toggle('text-blue-600', lang === 'fr');
            document.getElementById('fr-btn').classList.toggle('font-bold', lang === 'fr');
            document.getElementById('en-btn').classList.toggle('text-blue-600', lang === 'en');
            document.getElementById('en-btn').classList.toggle('font-bold', lang === 'en');
        }

        function scrollToOffer() {
            document.getElementById('offer').scrollIntoView({ behavior: 'smooth' });
        }

        function bookCall() {
            document.getElementById('bookingModal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('bookingModal').classList.add('hidden');
            document.getElementById('bookingForm').reset();
        }

        function submitBooking(event) {
            event.preventDefault();
            const successMessage = currentLang === 'fr' 
                ? 'üéâ Parfait ! Votre audit business est r√©serv√©. Notre √©quipe technique vous contacte dans les 2 heures pour planifier votre session d\'analyse personnalis√©e.'
                : 'üéâ Perfect! Your business audit is booked. Our technical team will contact you within 2 hours to schedule your personalized analysis session.';
            alert(successMessage);
            closeModal();
        }

        document.getElementById('bookingModal').addEventListener('click', function(e) {
            if (e.target === this) closeModal();
        });

        switchLanguage('fr');
    </script>
